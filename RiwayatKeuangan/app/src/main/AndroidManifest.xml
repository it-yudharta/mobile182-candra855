<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.can.riwayatkeuangan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Riwayat Keuangan"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Pemasukan"
            android:label="@string/title_activity_pemasukan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Pengeluaran"
            android:label="@string/title_activity_pengeluaran"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".IsiPemasukan" />
        <activity android:name=".IsiPengeluaran" />
        <activity android:name=".LihatPemasukan" />
        <activity android:name=".LihatPengeluaran"></activity>
    </application>

</manifest>